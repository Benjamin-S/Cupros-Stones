<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- If Stuffed Floors is not found, add the designation category and assign it -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="CuprosStones.PatchOperationModDependent">
				<modName>Stuffed Floors</modName>
				<success>Invert</success>
			</li>
			<li Class="PatchOperationInsert">
				<success>Always</success>
				<xpath>/Defs/Def[@Name="STN_DefInsertion"]</xpath>
				<order>Prepend</order>
				<value>
					<DesignationCategoryDef>
						<defName>STN_Floors</defName>
						<label>Stone Floors</label>
						<description>Stone floors added by Cupro's Stones.</description>
						<order>210</order>
						<specialDesignatorClasses>
							<li>Designator_Cancel</li>
							<li>Designator_SmoothFloor</li>
							<li>Designator_RemoveFloor</li>
						</specialDesignatorClasses>
					</DesignationCategoryDef>  
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/TerrainDef[@Name = "STN_FloorBase"]/designationCategory</xpath>
				<value>
					<designationCategory>STN_Floors</designationCategory>
				</value>
			</li>
		</operations>
	</Operation>

	<!-- If Stuffed Floors is found, add my floors to the defNames -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="CuprosStones.PatchOperationModDependent">
				<modName>Stuffed Floors</modName>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ArchitectSense.DesignationSubCategoryDef[defName="SubCategory_Flagstones"]/defNames</xpath>
				<value>
					<li>FlagstoneClaystone</li>
					<li>FlagstoneAndesite</li>
					<li>FlagstoneSyenite</li>
					<li>FlagstoneGneiss</li>
					<li>FlagstoneQuartzite</li>
					<li>FlagstoneSchist</li>
					<li>FlagstoneGabbro</li>
					<li>FlagstoneDiorite</li>
					<li>FlagstoneDunite</li>
					<li>FlagstonePegmatite</li>
				</value>
			</li>
		</operations>
	</Operation>

	<!-- If Stuffed Floors is found, add vanilla tile floors -->
	<!-- This won't be necessary in the future, but for now there isn't a tile group -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="CuprosStones.PatchOperationModDependent">
				<modName>Stuffed Floors</modName>
			</li>
			<li Class="PatchOperationInsert">
				<xpath>/Defs/TerrainDef[@Name="STN_FloorBase"]</xpath>
				<order>Prepend</order>
				<value>
					<ArchitectSense.DesignationSubCategoryDef>
						<defName>SubCategory_CuproStoneTiles</defName>
						<label>Large bricks</label>
						<description>Refined, carefully-cut stone tiles for a castle feeling. Pretty to look at, but they take a long time to lay.</description>
						<defNames>
							<li>TileSandstone</li>
							<li>TileGranite</li>
							<li>TileLimestone</li>
							<li>TileSlate</li>
							<li>TileMarble</li>
							<li>TileClaystone</li>
							<li>TileAndesite</li>
							<li>TileSyenite</li>
							<li>TileGneiss</li>
							<li>TileQuartzite</li>
							<li>TileSchist</li>
							<li>TileGabbro</li>
							<li>TileDiorite</li>
							<li>TileDunite</li>
							<li>TilePegmatite</li>
						</defNames>
						<designationCategory>Floors</designationCategory>
						<preview>false</preview>
						<emulateStuff>true</emulateStuff>
					</ArchitectSense.DesignationSubCategoryDef>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>