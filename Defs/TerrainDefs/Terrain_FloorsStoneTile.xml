	<TerrainDef Abstract="True" ParentName="STN_FloorBase" Name="STN_TileStoneBase">
		<RenderPrecedence>220</RenderPrecedence>
		<Description>Refined, carefully-cut stone tiles for a castle feeling. Pretty to look at, but they take a long time to lay.</Description>
		<texturePath>Terrain/Surfaces/TileStone</texturePath>
		<statBases>
			<WorkToMake>1100</WorkToMake>
			<Beauty>1</Beauty>
		</statBases>
	</TerrainDef>

	<TerrainDef Abstract="True" ParentName="STN_FloorBase" Name="STN_FlagstoneBase">
		<RenderPrecedence>220</RenderPrecedence>
		<Description>Roughly-cut stone tiles. Not super pretty, but they make good surfaces for roads and outdoor walkways. Deconstructing flagstone yields no resources.</Description>
		<texturePath>Terrain/Surfaces/Flagstone</texturePath>
		<resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
		<statBases>
			<WorkToBuild>500</WorkToBuild>
			<Beauty>0</Beauty>
		</statBases>
		<tags>
			<li>Road</li>
		</tags>
	</TerrainDef>



